{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RansomEye DPI Flow Record",
  "description": "Frozen schema for DPI flow records. All fields are mandatory. Zero optional fields allowed. No payload storage.",
  "type": "object",
  "required": [
    "flow_id",
    "src_ip",
    "dst_ip",
    "src_port",
    "dst_port",
    "protocol",
    "flow_start",
    "flow_end",
    "packet_count",
    "byte_count",
    "l7_protocol",
    "behavioral_profile_id",
    "asset_profile_id",
    "privacy_mode",
    "immutable_hash"
  ],
  "additionalProperties": false,
  "properties": {
    "flow_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this flow (UUID v4)"
    },
    "src_ip": {
      "type": "string",
      "format": "ipv4",
      "description": "Source IP address (may be redacted based on privacy mode)"
    },
    "dst_ip": {
      "type": "string",
      "format": "ipv4",
      "description": "Destination IP address (may be redacted based on privacy mode)"
    },
    "src_port": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "description": "Source port number"
    },
    "dst_port": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535,
      "description": "Destination port number"
    },
    "protocol": {
      "type": "string",
      "enum": [
        "tcp",
        "udp",
        "icmp",
        "other"
      ],
      "description": "Network protocol"
    },
    "flow_start": {
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 UTC timestamp of flow start"
    },
    "flow_end": {
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 UTC timestamp of flow end"
    },
    "packet_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Total packet count in flow"
    },
    "byte_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Total byte count in flow"
    },
    "l7_protocol": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64,
      "description": "L7 protocol identifier (metadata only, no payload)"
    },
    "behavioral_profile_id": {
      "type": "string",
      "format": "uuid",
      "description": "Behavioral profile identifier (from flow-level ML)"
    },
    "asset_profile_id": {
      "type": "string",
      "format": "uuid",
      "description": "Asset profile identifier (from asset classification)"
    },
    "privacy_mode": {
      "type": "string",
      "enum": [
        "STRICT",
        "BALANCED",
        "FORENSIC"
      ],
      "description": "Privacy mode applied to this flow"
    },
    "immutable_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA256 hash of flow record (immutability guarantee)"
    }
  }
}

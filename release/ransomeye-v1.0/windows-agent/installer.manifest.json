{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ransomeye.v1.0/installer/windows-agent/manifest",
  "title": "RansomEye v1.0 Windows Agent Installer Manifest Schema",
  "description": "AUTHORITATIVE: Schema for installation manifest generated by Windows Agent installer",
  "type": "object",
  "required": [
    "version",
    "ransomeye_version",
    "install_timestamp",
    "install_root",
    "directories",
    "runtime_identity",
    "component_instance_id",
    "core_endpoint",
    "windows_service"
  ],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Installer version"
    },
    "ransomeye_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "RansomEye Windows Agent version"
    },
    "install_timestamp": {
      "type": "string",
      "description": "Installation timestamp (Windows date/time format)"
    },
    "install_root": {
      "type": "string",
      "pattern": "^[A-Z]:\\\\.*[^\\\\]$",
      "description": "Absolute path to installation root (Windows format, no trailing backslash)"
    },
    "directories": {
      "type": "object",
      "required": ["bin", "config", "logs", "runtime"],
      "additionalProperties": false,
      "properties": {
        "bin": {
          "type": "string",
          "pattern": "^[A-Z]:\\\\.*[^\\\\]$",
          "description": "Absolute path to binary directory (Windows format)"
        },
        "config": {
          "type": "string",
          "pattern": "^[A-Z]:\\\\.*[^\\\\]$",
          "description": "Absolute path to configuration directory (Windows format)"
        },
        "logs": {
          "type": "string",
          "pattern": "^[A-Z]:\\\\.*[^\\\\]$",
          "description": "Absolute path to logs directory (Windows format)"
        },
        "runtime": {
          "type": "string",
          "pattern": "^[A-Z]:\\\\.*[^\\\\]$",
          "description": "Absolute path to runtime directory (Windows format)"
        }
      }
    },
    "runtime_identity": {
      "type": "object",
      "required": ["user"],
      "additionalProperties": false,
      "properties": {
        "user": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_\\\\-]+$",
          "description": "Windows username (e.g., 'ransomeye-agent' or '.\\ransomeye-agent')"
        }
      }
    },
    "component_instance_id": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "Unique component instance UUID"
    },
    "core_endpoint": {
      "type": "string",
      "format": "uri",
      "description": "Core Ingest service endpoint URL (may be unreachable)"
    },
    "windows_service": {
      "type": "string",
      "const": "RansomEyeWindowsAgent",
      "description": "Windows Service name (always RansomEyeWindowsAgent)"
    }
  }
}

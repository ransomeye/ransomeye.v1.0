{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ransomeye.v1.0/installer/dpi-probe/manifest",
  "title": "RansomEye v1.0 DPI Probe Installer Manifest Schema",
  "description": "AUTHORITATIVE: Schema for installation manifest generated by DPI Probe installer",
  "type": "object",
  "required": [
    "version",
    "ransomeye_version",
    "install_timestamp",
    "install_root",
    "directories",
    "runtime_identity",
    "component_instance_id",
    "core_endpoint",
    "network_interface",
    "capabilities",
    "systemd_service"
  ],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Installer version"
    },
    "ransomeye_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "RansomEye DPI Probe version"
    },
    "install_timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of installation"
    },
    "install_root": {
      "type": "string",
      "pattern": "^/.*[^/]$",
      "description": "Absolute path to installation root (no trailing slash)"
    },
    "directories": {
      "type": "object",
      "required": ["bin", "config", "logs", "runtime"],
      "additionalProperties": false,
      "properties": {
        "bin": {
          "type": "string",
          "pattern": "^/.*[^/]$",
          "description": "Absolute path to binary directory"
        },
        "config": {
          "type": "string",
          "pattern": "^/.*[^/]$",
          "description": "Absolute path to configuration directory"
        },
        "logs": {
          "type": "string",
          "pattern": "^/.*[^/]$",
          "description": "Absolute path to logs directory"
        },
        "runtime": {
          "type": "string",
          "pattern": "^/.*[^/]$",
          "description": "Absolute path to runtime directory"
        }
      }
    },
    "runtime_identity": {
      "type": "object",
      "required": ["user", "group", "uid", "gid"],
      "additionalProperties": false,
      "properties": {
        "user": {
          "type": "string",
          "pattern": "^[a-z_][a-z0-9_]*$",
          "description": "System username"
        },
        "group": {
          "type": "string",
          "pattern": "^[a-z_][a-z0-9_]*$",
          "description": "System groupname"
        },
        "uid": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65534,
          "description": "Numeric user ID"
        },
        "gid": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65534,
          "description": "Numeric group ID"
        }
      }
    },
    "component_instance_id": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "Unique component instance UUID"
    },
    "core_endpoint": {
      "type": "string",
      "format": "uri",
      "description": "Core Ingest service endpoint URL (may be unreachable)"
    },
    "network_interface": {
      "type": "string",
      "description": "Network interface name for packet capture (empty for auto-detect)"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["CAP_NET_RAW", "CAP_NET_ADMIN"]
      },
      "minItems": 2,
      "maxItems": 2,
      "description": "Linux capabilities required for packet capture (scoped privileges, not full root)"
    },
    "systemd_service": {
      "type": "string",
      "const": "ransomeye-dpi.service",
      "description": "Systemd service name (always ransomeye-dpi.service)"
    }
  }
}

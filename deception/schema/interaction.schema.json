{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RansomEye Deception Interaction",
  "description": "Frozen schema for deception interactions. All fields are mandatory. No optional fields allowed.",
  "type": "object",
  "required": [
    "interaction_id",
    "decoy_id",
    "interaction_type",
    "source_ip",
    "source_host",
    "source_process",
    "timestamp",
    "evidence_reference",
    "confidence_level",
    "immutable_hash",
    "ledger_entry_id"
  ],
  "additionalProperties": false,
  "properties": {
    "interaction_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this interaction (UUID v4)"
    },
    "decoy_id": {
      "type": "string",
      "format": "uuid",
      "description": "Decoy identifier that was interacted with"
    },
    "interaction_type": {
      "type": "string",
      "enum": [
        "auth_attempt",
        "scan",
        "access",
        "command"
      ],
      "description": "Type of interaction"
    },
    "source_ip": {
      "type": "string",
      "format": "ipv4",
      "description": "Source IP address of interaction"
    },
    "source_host": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256,
      "description": "Source hostname (if available)"
    },
    "source_process": {
      "type": "string",
      "minLength": 1,
      "maxLength": 512,
      "description": "Source process identifier (if available)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 UTC timestamp of interaction"
    },
    "evidence_reference": {
      "type": "string",
      "format": "uuid",
      "description": "Evidence reference identifier (KillChain & Forensics)"
    },
    "confidence_level": {
      "type": "string",
      "enum": [
        "LOW",
        "MEDIUM",
        "HIGH"
      ],
      "description": "Confidence level (HIGH by default for deception interactions)"
    },
    "immutable_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA256 hash of interaction record (immutability guarantee)"
    },
    "ledger_entry_id": {
      "type": "string",
      "format": "uuid",
      "description": "Audit ledger entry ID for this interaction"
    }
  }
}

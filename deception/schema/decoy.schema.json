{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RansomEye Decoy",
  "description": "Frozen schema for decoys. All fields are mandatory. No optional fields allowed.",
  "type": "object",
  "required": [
    "decoy_id",
    "decoy_type",
    "decoy_name",
    "decoy_config",
    "deployment_target",
    "created_at",
    "immutable_hash"
  ],
  "additionalProperties": false,
  "properties": {
    "decoy_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this decoy (UUID v4)"
    },
    "decoy_type": {
      "type": "string",
      "enum": [
        "host",
        "service",
        "credential",
        "file"
      ],
      "description": "Type of decoy"
    },
    "decoy_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256,
      "description": "Human-readable decoy name"
    },
    "decoy_config": {
      "type": "object",
      "description": "Decoy-specific configuration (immutable after creation)",
      "minProperties": 1,
      "additionalProperties": true
    },
    "deployment_target": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256,
      "description": "Deployment target identifier (IP, hostname, or path)"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 UTC timestamp of decoy creation"
    },
    "immutable_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA256 hash of decoy record (immutability guarantee)"
    }
  }
}

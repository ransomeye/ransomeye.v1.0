{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ransomeye.v1.0/installer/core/manifest",
  "title": "RansomEye v1.0 Core Installer Manifest Schema",
  "description": "AUTHORITATIVE: Schema for installation manifest generated by Core installer",
  "type": "object",
  "required": [
    "version",
    "ransomeye_version",
    "install_timestamp",
    "install_root",
    "directories",
    "runtime_identity",
    "component_instance_id",
    "systemd_service"
  ],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Installer version"
    },
    "ransomeye_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "RansomEye Core version"
    },
    "install_timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of installation"
    },
    "install_root": {
      "type": "string",
      "pattern": "^/.*[^/]$",
      "description": "Absolute path to installation root (no trailing slash)"
    },
    "directories": {
      "type": "object",
      "required": ["bin", "lib", "config", "logs", "runtime"],
      "additionalProperties": false,
      "properties": {
        "bin": {
          "type": "string",
          "pattern": "^/.*[^/]$",
          "description": "Absolute path to binary directory"
        },
        "lib": {
          "type": "string",
          "pattern": "^/.*[^/]$",
          "description": "Absolute path to library directory"
        },
        "config": {
          "type": "string",
          "pattern": "^/.*[^/]$",
          "description": "Absolute path to configuration directory"
        },
        "logs": {
          "type": "string",
          "pattern": "^/.*[^/]$",
          "description": "Absolute path to logs directory"
        },
        "runtime": {
          "type": "string",
          "pattern": "^/.*[^/]$",
          "description": "Absolute path to runtime directory"
        }
      }
    },
    "runtime_identity": {
      "type": "object",
      "required": ["user", "group", "uid", "gid"],
      "additionalProperties": false,
      "properties": {
        "user": {
          "type": "string",
          "pattern": "^[a-z_][a-z0-9_]*$",
          "description": "System username"
        },
        "group": {
          "type": "string",
          "pattern": "^[a-z_][a-z0-9_]*$",
          "description": "System groupname"
        },
        "uid": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65534,
          "description": "Numeric user ID"
        },
        "gid": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65534,
          "description": "Numeric group ID"
        }
      }
    },
    "component_instance_id": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "Unique component instance UUID"
    },
    "systemd_service": {
      "type": "string",
      "const": "ransomeye-core.service",
      "description": "Systemd service name (always ransomeye-core.service)"
    }
  }
}

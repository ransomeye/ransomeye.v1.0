[run]
branch = True
parallel = True
concurrency = multiprocessing
source =
    core
    services/ingest
    services/correlation-engine
    services/ai-core
    services/policy-engine
    services/ui/backend
    rbac
    common/security
    dpi/probe
omit =
    */tests/*
    */validation/*
    */release/*
    */mishka/*
    */scripts/*
    */services/linux-agent/*
    */services/windows-agent/*
    */services/ui/frontend/*

[report]
show_missing = True
skip_empty = True

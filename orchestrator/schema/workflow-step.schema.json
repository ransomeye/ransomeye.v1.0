{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RansomEye Workflow Step",
  "description": "Frozen schema for workflow steps. All fields are mandatory. No optional fields allowed.",
  "type": "object",
  "required": [
    "step_id",
    "step_type",
    "input_refs",
    "output_refs",
    "authority_required",
    "explanation_required",
    "deterministic_timeout"
  ],
  "additionalProperties": false,
  "properties": {
    "step_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this step (UUID v4)"
    },
    "step_type": {
      "type": "string",
      "enum": [
        "ALERT_DELIVERY",
        "IR_EXECUTION",
        "VALIDATION",
        "REPORT_GEN"
      ],
      "description": "Type of workflow step"
    },
    "input_refs": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Explicit data dependencies (references to previous step outputs)"
    },
    "output_refs": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Output references (identifiers for step outputs)"
    },
    "authority_required": {
      "type": "string",
      "enum": [
        "NONE",
        "HUMAN",
        "ROLE"
      ],
      "description": "Required authority level for step execution"
    },
    "explanation_required": {
      "type": "boolean",
      "description": "Whether explanation bundle is required for step execution"
    },
    "deterministic_timeout": {
      "type": "integer",
      "minimum": 1,
      "description": "Deterministic timeout in seconds"
    }
  }
}

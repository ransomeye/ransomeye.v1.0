{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RansomEye UBA Behavior Event",
  "description": "Frozen schema for behavior events. All fields are mandatory. Zero optional fields allowed.",
  "type": "object",
  "required": [
    "event_id",
    "identity_id",
    "event_type",
    "source_component",
    "resource_id",
    "action",
    "timestamp",
    "host_id",
    "evidence_ref",
    "immutable_hash",
    "ledger_entry_id"
  ],
  "additionalProperties": false,
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event (UUID v4)"
    },
    "identity_id": {
      "type": "string",
      "format": "uuid",
      "description": "Identity identifier"
    },
    "event_type": {
      "type": "string",
      "enum": [
        "login",
        "file_access",
        "process_start",
        "network_access",
        "privilege_use",
        "policy_override"
      ],
      "description": "Type of behavior event (explicit enumeration)"
    },
    "source_component": {
      "type": "string",
      "enum": [
        "linux-agent",
        "windows-agent",
        "dpi",
        "hnmp",
        "ir",
        "deception"
      ],
      "description": "Source component that generated this event"
    },
    "resource_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 512,
      "description": "Resource identifier (file path, process ID, network endpoint, etc.)"
    },
    "action": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256,
      "description": "Action performed (read, write, execute, connect, etc.)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 UTC timestamp of event (canonical)"
    },
    "host_id": {
      "type": "string",
      "format": "uuid",
      "description": "Host identifier where event occurred"
    },
    "evidence_ref": {
      "type": "string",
      "format": "uuid",
      "description": "Evidence reference identifier (KillChain & Forensics)"
    },
    "immutable_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA256 hash of event record (immutability guarantee)"
    },
    "ledger_entry_id": {
      "type": "string",
      "format": "uuid",
      "description": "Audit ledger entry ID for this event"
    }
  }
}

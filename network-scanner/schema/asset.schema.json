{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RansomEye Network Asset",
  "description": "Frozen schema for network assets. All fields are mandatory. No optional fields allowed.",
  "type": "object",
  "required": [
    "asset_id",
    "ip_address",
    "mac_address",
    "hostname",
    "discovery_method",
    "discovered_at",
    "last_seen_at",
    "immutable_hash"
  ],
  "additionalProperties": false,
  "properties": {
    "asset_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this asset (UUID v4)"
    },
    "ip_address": {
      "type": "string",
      "format": "ipv4",
      "description": "IPv4 address of the asset"
    },
    "mac_address": {
      "type": "string",
      "pattern": "^([0-9A-Fa-f]{2}[:-]){5}([0-9A-Fa-f]{2})$",
      "description": "MAC address of the asset (if available)"
    },
    "hostname": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256,
      "description": "Hostname of the asset (if available)"
    },
    "discovery_method": {
      "type": "string",
      "enum": [
        "active_scan",
        "passive_dpi",
        "passive_flow",
        "manual"
      ],
      "description": "Method used to discover this asset"
    },
    "discovered_at": {
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 UTC timestamp of discovery"
    },
    "last_seen_at": {
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 UTC timestamp of last observation"
    },
    "immutable_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA256 hash of asset record (immutability guarantee)"
    }
  }
}

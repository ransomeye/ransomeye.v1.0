{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RansomEye LLM Summarizer - Prompt Template",
  "description": "Frozen schema for prompt templates. All fields are mandatory. No optional fields allowed.",
  "type": "object",
  "required": [
    "template_id",
    "template_version",
    "narrative_type",
    "template_content",
    "template_hash",
    "registered_at",
    "registered_by"
  ],
  "additionalProperties": false,
  "properties": {
    "template_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this template (UUID v4)"
    },
    "template_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Template version (semver)"
    },
    "narrative_type": {
      "type": "string",
      "enum": [
        "SOC_NARRATIVE",
        "EXECUTIVE_SUMMARY",
        "LEGAL_NARRATIVE"
      ],
      "description": "Narrative type this template generates"
    },
    "template_content": {
      "type": "string",
      "minLength": 1,
      "description": "Jinja2 template content"
    },
    "template_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA256 hash of template_content"
    },
    "registered_at": {
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 UTC timestamp of registration"
    },
    "registered_by": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256,
      "description": "Entity that registered template"
    }
  }
}
